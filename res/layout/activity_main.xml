<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7373B9"
    tools:context=".MainActivity" >

    <SeekBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:padding="18dp"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btn_apoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_apoint"
        android:layout_below="@id/progress"
        android:layout_alignLeft="@id/progress" />

    <Button
        android:id="@+id/btn_bpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_bpoint"
        android:layout_below="@id/progress"
        android:layout_alignRight="@id/progress" />

    <Button
        android:id="@+id/btn_play_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play_hold_state_playing"
        android:layout_below="@id/progress"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
